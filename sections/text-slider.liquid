{{ 'text-slider.css' | asset_url | stylesheet_tag }}

{% assign words = section.settings.title | split: ' ' %}

<h2 class="text-slider__title">
  {% for word in words %}
    {% if forloop.index == 2 %}
      <i>{{ word }}</i>
    {% else %}
      {{ word }}
    {% endif %}
  {% endfor %}
</h2>
<div class="swiper text-slider">
  <div class="swiper-wrapper text-slider__wrapper">
    {% for block in section.blocks %}
      <div class="swiper-slide text-slider__slide">
        <h4>
          {{ block.settings.slide_name }}
        </h4>
        <div>
          {{ block.settings.slide_text }}
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<script src="{{ 'text-slider.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "Text slider",
  "tag": "section",
  "class": "text-slider-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Heading",
      "label": "Heading"
    }
  ],
  "max_blocks": 3,
  "blocks": [
    {
      "type": "text_slide",
      "name": "Text slide",
      "settings": [
        {
          "type": "text",
          "id": "slide_name",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "slide_text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text slider"
    }
  ]
}
{% endschema %}
