{{ 'payment-methods.css' | asset_url | stylesheet_tag }}

<h2 class="payment-methods__title">
  {{ section.settings.title }}
</h2>
<div class="swiper payment-methods">
  <div class="swiper-wrapper payment-methods__wrapper">
    {% for block in section.blocks %}
      <div class="swiper-slide payment-methods__slide">
        <h4>
          {{ block.settings.slide_name }}
        </h4>
        <div class="payment-methods__description">
          {{ block.settings.slide_text }}
        </div>
        <div class="payment-methods__options">
          <div class="payment-methods__price">
            <p class="payment-methods__quantity">
              {{ block.settings.quantity_payments -}}
              {%- if block.settings.quantity_payments == 1 %}
                payment
              {% else %}
                payments
              {% endif %}
            </p>
            <div class="no-js-hidden price-wrapper" id="price-{{ section.id }}" {{ block.shopify_attributes }}>
              {%- render 'price',
                product: product,
                use_variant: true,
                show_badges: true,
                price_class: 'price--product',
                split_price: true,
                quantity_payments: block.settings.quantity_payments
              -%}
              {%- if cart.taxes_included or shop.shipping_policy.body != blank -%}
                <div class="product__tax caption rte">
                  {%- if cart.taxes_included -%}
                    {{ 'products.product.include_taxes' | t }}
                  {%- endif -%}
                  {%- if shop.shipping_policy.body != blank -%}
                    {{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}
                  {%- endif -%}
                </div>
              {%- endif -%}
            </div>
          </div>
          <div {{ block.shopify_attributes }} style="margin: 0">
            {%- form 'product', product, id: 'product-form-installment', class: 'installment caption-large' -%}
              <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
              {{ form | payment_terms }}
            {%- endform -%}
          </div>
          <div class="payment-methods__buybutton" {{ block.shopify_attributes }}>
            <product-form class="product-form">
              <div class="product-form__error-message-wrapper" role="alert" hidden>
                <svg
                  aria-hidden="true"
                  focusable="false"
                  role="presentation"
                  class="icon icon-error"
                  viewBox="0 0 13 13"
                >
                  <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
                  <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
                  <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
                  <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
                </svg>
                <span class="product-form__error-message"></span>
              </div>
              {%- form 'product',
                product,
                id: product_form_id,
                class: 'form',
                novalidate: 'novalidate',
                data-type: 'add-to-cart-form'
              -%}
                <input
                  type="hidden"
                  name="id"
                  value="{{ product.selected_or_first_available_variant.id }}"
                  disabled
                >
                <div class="product-form__buttons">
                  <button
                    type="submit"
                    name="add"
                    class="product-form__submit button button--primary-size {% if block.settings.show_dynamic_checkout and product.selling_plan_groups == empty %}button--secondary{% else %}button--primary{% endif %}"
                    {% if product.selected_or_first_available_variant.available == false %}
                      disabled
                    {% endif %}
                  >
                    {%- if product.selected_or_first_available_variant.available -%}
                      BUY NOW
                    {%- else -%}
                      SOLD OUT
                    {%- endif -%}
                  </button>
                </div>
              {%- endform -%}
            </product-form>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<script src="{{ 'payment-methods.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "Payment methods",
  "tag": "section",
  "class": "payment-methods-section",
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "default": "<p>Heading</p>",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "text_slide",
      "name": "Text slide",
      "settings": [
        {
          "type": "richtext",
          "id": "slide_name",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "slide_text",
          "label": "Text"
        },
        {
          "type": "range",
          "id": "quantity_payments",
          "min": 1,
          "max": 10,
          "step": 1,
          "label": "Payments` quantity",
          "default": 1
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Payment methods"
    }
  ]
}
{% endschema %}
